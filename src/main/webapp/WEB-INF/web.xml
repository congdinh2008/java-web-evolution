<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
    version="6.0">

    <display-name>ViVuStore Web Application</display-name>

    <servlet>
        <servlet-name>ViVuStoreApplication</servlet-name>
        <servlet-class>com.congdinh.ViVuStoreApplication</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ViVuStoreApplication</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>ViVuStoreApplication</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>ViVuStoreApplication</servlet-name>
        <url-pattern>/about</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>ViVuStoreApplication</servlet-name>
        <url-pattern>/contact</url-pattern>
    </servlet-mapping>
    
    <!-- Product CRUD URL patterns -->
    <servlet-mapping>
        <servlet-name>ViVuStoreApplication</servlet-name>
        <url-pattern>/product-details</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>ViVuStoreApplication</servlet-name>
        <url-pattern>/products/add</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>ViVuStoreApplication</servlet-name>
        <url-pattern>/products/update</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>ViVuStoreApplication</servlet-name>
        <url-pattern>/products/delete</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>ViVuStoreApplication</servlet-name>
        <url-pattern>/products/edit</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>